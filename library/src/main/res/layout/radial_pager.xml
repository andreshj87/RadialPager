<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/center_item"
      android:layout_width="@dimen/radialpager_center_item_size"
      android:layout_height="@dimen/radialpager_center_item_size"
      android:src="@drawable/putin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <!-- First level -->

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_first_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_second_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_third_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_fourth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_fifth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_first_level_item_size"
      android:layout_height="@dimen/radialpager_first_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_sixth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_first_level_radius"/>

  <!-- Second level -->

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_first_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_second_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_third_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_fourth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_fifth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_second_level_item_size"
      android:layout_height="@dimen/radialpager_second_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_even_level_sixth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_second_level_radius"/>

  <!-- Third level -->

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_first_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_second_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_third_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_fourth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_fifth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:layout_width="@dimen/radialpager_third_level_item_size"
      android:layout_height="@dimen/radialpager_third_level_item_size"
      android:src="@drawable/putin"
      app:layout_constraintCircle="@+id/center_item"
      app:layout_constraintCircleAngle="@dimen/radialpager_odd_level_sixth_item_angle"
      app:layout_constraintCircleRadius="@dimen/radialpager_third_level_radius"/>

</android.support.constraint.ConstraintLayout>